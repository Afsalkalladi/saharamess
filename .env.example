# Django Configuration
DEBUG=True
DJANGO_SECRET_KEY=your-super-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mess_management

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram/webhook
ADMIN_TG_IDS=123456789,987654321

# QR Code Configuration
QR_SECRET=your-qr-secret-key-for-hmac-signing
QR_SECRET_VERSION=1

# Cloudinary Configuration (for image uploads)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Google Sheets Configuration (for backup logging)
SHEETS_CREDENTIALS_JSON={"type": "service_account", "project_id": "...", ...}
SHEETS_SPREADSHEET_ID=your_google_sheets_spreadsheet_id

# Time Zone Configuration
TIMEZONE=Asia/Kolkata

# Mess Configuration
MESS_CUTOFF_TIME=23:00

# Staff Scanner Configuration
STAFF_SCANNER_PASSWORD=your-admin-password-for-scanner-access

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=INFO

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# Performance Settings
CELERY_WORKER_CONCURRENCY=2
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# Backup Settings
BACKUP_RETENTION_DAYS=90
SCAN_EVENT_RETENTION_DAYS=30

# Notification Settings
DAILY_REPORT_TIME=08:00
PAYMENT_WARNING_DAYS=3